<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="apellido" value="<%=data.apellido%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%=data.nombre%>"  class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="club" value="<%=data.club%>"  class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Jugador
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


