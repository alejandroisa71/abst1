<%- include ('partials/_header') %>


    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>num</th>
                            <th>Apellido</th>
                            <th>Nombre</th>
                            <th>Club</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i + 1 )%></td>
                                <td><%= data[i].apellido%></td>
                                <td><%= data[i].nombre%></td>
                                <td><%= data[i].club%></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                </td>
                            </tr>
                            <%}%>
                        <%}%>
                    </tbody>
                </table>

            </div>
            <div class="col-md-5">
               <div class="card">
                   <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="apellido" placeholder="Apellido" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombres" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="club" placeholder="Club" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Jugador
                        </button>
                    </form>
                   </div>
               </div>
            </div>
        </div>
    </div>

    <%- include ('partials/_footer') %>